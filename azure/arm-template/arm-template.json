{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "String",
            "metadata": {
                "description": "Username for the VM login"
            }
        },
        "adminPassword": {
            "type": "SecureString",
            "metadata": {
                "description": "Password for the VM login"
            }
        },
        "sshPublicKey": {
            "type": "SecureString",
            "metadata": {
                "description": "SSH Public Key"
            }
        },
        "storageAccountName": {
            "defaultValue": "[concat('kestrastore', uniqueString(resourceGroup().id))]",
            "type": "String",
            "metadata": {
                "description": "Auto-generated unique name."
            }
        },
        "postgresInstanceName": {
            "defaultValue": "[concat('kestra-db-', uniqueString(resourceGroup().id))]",
            "type": "String",
            "metadata": {
                "description": "Auto-generated unique name."
            }
        },
        "postgresAdmin": {
            "defaultValue": "kestra",
            "type": "String"
        },
        "postgresPassword": {
            "type": "SecureString"
        },
        "databaseName": {
            "defaultValue": "kestra",
            "type": "String"
        },
        "vmSize": {
            "defaultValue": "Standard_B2s",
            "type": "String"
        },
        "vnetCidr": {
            "defaultValue": "10.10.0.0/16",
            "type": "String"
        },
        "subnetVmCidr": {
            "defaultValue": "10.10.1.0/24",
            "type": "String"
        },
        "subnetDbCidr": {
            "defaultValue": "10.10.2.0/24",
            "type": "String"
        },
        "authorizedSourceIpCidr": {
            "defaultValue": "*",
            "type": "String",
            "metadata": {
                "description": "The public IP address or CIDR range allowed to connect to the VM (Port 22 & 8080). Use '*' for all IPs, or 'x.x.x.x/32' for a single IP."
            }
        },
        "kestraBasicUser": {
            "defaultValue": "admin@kestra.io",
            "type": "String"
        },
        "kestraBasicPassword": {
            "type": "SecureString"
        },
        "containerName": {
            "defaultValue": "kestra-storage",
            "type": "String"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "vmName": "kestra-vm",
        "vnetName": "kestra-vnet",
        "nsgName": "kestra-nsg",
        "subnetVmName": "kestra-subnet-vm",
        "subnetDbName": "kestra-subnet-db",
        "publicIpName": "kestra-ip-std",
        "nicName": "kestra-nic",
        "privateDnsZoneName": "kestra.private.postgres.database.azure.com",
        "dnsLinkName": "[concat(variables('privateDnsZoneName'), '/', variables('vnetName'), '-link')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2022-07-01",
            "name": "[variables('nsgName')]",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "AllowSSH",
                        "properties": {
                            "priority": 1000,
                            "protocol": "Tcp",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceAddressPrefix": "[parameters('authorizedSourceIpCidr')]",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "22"
                        }
                    },
                    {
                        "name": "AllowKestraWeb",
                        "properties": {
                            "priority": 1010,
                            "protocol": "Tcp",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceAddressPrefix": "[parameters('authorizedSourceIpCidr')]",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "8080"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2022-09-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[variables('location')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2",
            "properties": {}
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2022-09-01",
            "name": "[concat(parameters('storageAccountName'), '/default/', parameters('containerName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ]
        },
        {
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2020-06-01",
            "name": "[variables('privateDnsZoneName')]",
            "location": "global"
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2022-07-01",
            "name": "[variables('vnetName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetCidr')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetVmName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetVmCidr')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                            }
                        }
                    },
                    {
                        "name": "[variables('subnetDbName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetDbCidr')]",
                            "delegations": [
                                {
                                    "name": "Microsoft.DBforPostgreSQL/flexibleServers",
                                    "properties": {
                                        "serviceName": "Microsoft.DBforPostgreSQL/flexibleServers"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
            "apiVersion": "2020-06-01",
            "name": "[variables('dnsLinkName')]",
            "location": "global",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
                "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]"
            ],
            "properties": {
                "registrationEnabled": false,
                "virtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
                }
            }
        },
        {
            "type": "Microsoft.DBforPostgreSQL/flexibleServers",
            "apiVersion": "2024-08-01",
            "name": "[parameters('postgresInstanceName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateDnsZones/virtualNetworkLinks', variables('privateDnsZoneName'), concat(variables('vnetName'), '-link'))]"
            ],
            "sku": {
                "name": "Standard_B1ms",
                "tier": "Burstable"
            },
            "properties": {
                "version": "16",
                "administratorLogin": "[parameters('postgresAdmin')]",
                "administratorLoginPassword": "[parameters('postgresPassword')]",
                "storage": {
                    "storageSizeGB": 32
                },
                "network": {
                    "delegatedSubnetResourceId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetDbName'))]",
                    "privateDnsZoneArmResourceId": "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]"
                }
            }
        },
        {
            "type": "Microsoft.DBforPostgreSQL/flexibleServers/databases",
            "apiVersion": "2024-08-01",
            "name": "[concat(parameters('postgresInstanceName'), '/', parameters('databaseName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresInstanceName'))]"
            ],
            "properties": {
                "charset": "UTF8",
                "collation": "en_US.utf8"
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2022-07-01",
            "name": "[variables('publicIpName')]",
            "location": "[variables('location')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2022-07-01",
            "name": "[variables('nicName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIpName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetVmName'))]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIpName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2023-03-01",
            "name": "[variables('vmName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
                "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresInstanceName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[variables('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                                    "keyData": "[parameters('sshPublicKey')]"
                                }
                            ]
                        }
                    },
                    "customData": "[base64(concat('#!/bin/bash\n','set -e\n','apt-get update && apt-get install -y docker.io\n','systemctl start docker && systemctl enable docker\n','usermod -aG docker ', parameters('adminUsername'), '\n','mkdir -p /home/', parameters('adminUsername'), '/config\n','cat <<EOF > /home/', parameters('adminUsername'), '/config/application.yml\n','datasources:\n','  postgres:\n','    url: jdbc:postgresql://', reference(resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresInstanceName')), '2024-08-01').fullyQualifiedDomainName, ':5432/', parameters('databaseName'), '\n','    username: ', parameters('postgresAdmin'), '\n','    password: ', parameters('postgresPassword'), '\n','kestra:\n','  server:\n','    basic-auth:\n','      enabled: true\n','      username: ', parameters('kestraBasicUser'), '\n','      password: ', parameters('kestraBasicPassword'), '\n','  repository:\n','    type: postgres\n','  queue:\n','    type: postgres\n','  storage:\n','    type: azure\n','    azure:\n','      endpoint: https://', parameters('storageAccountName'), '.blob.core.windows.net\n','      container: ', parameters('containerName'), '\n','      connection-string: \"DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2022-09-01').keys[0].value, ';EndpointSuffix=core.windows.net\"\n','  tasks:\n','    tmp-dir:\n','      path: /tmp/kestra-wd/tmp\n','EOF\n','docker run -d --restart=always -p 8080:8080 --user=root -v /var/run/docker.sock:/var/run/docker.sock -v /home/', parameters('adminUsername'), '/config/application.yml:/etc/config/application.yml kestra/kestra:latest server standalone --config /etc/config/application.yml\n'))]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "0001-com-ubuntu-server-jammy",
                        "sku": "22_04-lts-gen2",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "kestraUrl": {
            "type": "String",
            "value": "[concat('http://', reference(resourceId('Microsoft.Network/publicIPAddresses', variables('publicIpName'))).ipAddress, ':8080')]"
        },
        "postgresFQDN": {
            "type": "String",
            "value": "[reference(resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresInstanceName')), '2024-08-01').fullyQualifiedDomainName]"
        },
        "storageAccountName": {
            "type": "String",
            "value": "[parameters('storageAccountName')]"
        }
    }
}