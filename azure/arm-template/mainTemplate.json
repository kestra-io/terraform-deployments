{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located. Default is empty for local testing."
      }
    },
    "_artifactsLocationSasToken": {
      "type": "secureString",
      "defaultValue": "",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation. Can be left blank if not required."
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "The administrator username for the Virtual Machine. Used for SSH connections."
      }
    },
    "adminPassword": {
      "type": "secureString",
      "metadata": {
        "description": "The administrator password for the Virtual Machine. Required by Azure even if SSH key is used."
      }
    },
    "sshPublicKey": {
      "type": "secureString",
      "metadata": {
        "description": "The SSH Public Key used for secure authentication to the Virtual Machine."
      }
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "[concat('kestrastore', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "The name of the Azure Storage Account. Must be globally unique, lowercase, and numbers only. Auto-generated by default."
      }
    },
    "postgresInstanceName": {
      "type": "string",
      "defaultValue": "[concat('kestra-db-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "The name of the Azure PostgreSQL Flexible Server. Must be globally unique. Auto-generated by default."
      }
    },
    "dbSkuName": {
      "type": "string",
      "defaultValue": "Standard_B1ms",
      "metadata": {
        "description": "The specific SKU name for the database (e.g., Standard_B1ms, Standard_D2s_v3). Controls CPU/RAM."
      }
    },
    "dbSkuTier": {
      "type": "string",
      "defaultValue": "Burstable",
      "allowedValues": [
        "Burstable",
        "GeneralPurpose",
        "MemoryOptimized"
      ],
      "metadata": {
        "description": "The tier of the database SKU. Use 'Burstable' for development/testing and 'GeneralPurpose' for production."
      }
    },
    "postgresAdmin": {
      "type": "string",
      "defaultValue": "kestra",
      "metadata": {
        "description": "The administrator username for the PostgreSQL Flexible Server."
      }
    },
    "postgresPassword": {
      "type": "secureString",
      "metadata": {
        "description": "The password for the PostgreSQL administrator. Must meet Azure complexity requirements."
      }
    },
    "databaseName": {
      "type": "string",
      "defaultValue": "kestra",
      "metadata": {
        "description": "The name of the initial database to create within the PostgreSQL server."
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_B2s",
      "metadata": {
        "description": "The size of the Virtual Machine. 'Standard_B2s' (2 vCPU, 4GB RAM) is recommended for small Kestra instances."
      }
    },
    "vnetCidr": {
      "type": "string",
      "defaultValue": "10.10.0.0/16",
      "metadata": {
        "description": "The address space for the entire Virtual Network (VNet)."
      }
    },
    "subnetVmCidr": {
      "type": "string",
      "defaultValue": "10.10.1.0/24",
      "metadata": {
        "description": "The subnet range for the Virtual Machine. Must be within the VNet address space."
      }
    },
    "subnetDbCidr": {
      "type": "string",
      "defaultValue": "10.10.2.0/24",
      "metadata": {
        "description": "The subnet range for the PostgreSQL Database. Must be within the VNet address space and distinct from the VM subnet."
      }
    },
    "authorizedSourceIpCidr": {
      "type": "string",
      "defaultValue": "*",
      "metadata": {
        "description": "The public IP address or CIDR range allowed to connect to the VM (Port 22 & 8080). Use '*' for all IPs, or your home IP 'x.x.x.x/32' for security."
      }
    },
    "kestraBasicUser": {
      "type": "string",
      "defaultValue": "admin@kestra.io",
      "metadata": {
        "description": "The username used to log in to the Kestra Web UI."
      }
    },
    "kestraBasicPassword": {
      "type": "secureString",
      "metadata": {
        "description": "The password used to log in to the Kestra Web UI."
      }
    },
    "containerName": {
      "type": "string",
      "defaultValue": "kestra-storage",
      "metadata": {
        "description": "The name of the container inside the Storage Account where Kestra will store execution files."
      }
    }
  },
  "variables": {
    "vmName": "kestra-vm",
    "vnetName": "kestra-vnet",
    "nsgName": "kestra-nsg",
    "subnetVmName": "kestra-subnet-vm",
    "subnetDbName": "kestra-subnet-db",
    "publicIpName": "kestra-ip-std",
    "nicName": "kestra-nic",
    "privateDnsZoneName": "kestra.private.postgres.database.azure.com",
    "dnsLinkName": "[concat(variables('privateDnsZoneName'), '/', variables('vnetName'), '-link')]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2024-01-01",
      "name": "[variables('nsgName')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "AllowSSH",
            "properties": {
              "priority": 1000,
              "protocol": "Tcp",
              "access": "Allow",
              "direction": "Inbound",
              "sourceAddressPrefix": "[parameters('authorizedSourceIpCidr')]",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "22"
            }
          },
          {
            "name": "AllowKestraWeb",
            "properties": {
              "priority": 1010,
              "protocol": "Tcp",
              "access": "Allow",
              "direction": "Inbound",
              "sourceAddressPrefix": "[parameters('authorizedSourceIpCidr')]",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "8080"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-05-01",
      "name": "[parameters('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {}
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2023-05-01",
      "name": "[concat(parameters('storageAccountName'), '/default/', parameters('containerName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.Network/privateDnsZones",
      "apiVersion": "2024-06-01",
      "name": "[variables('privateDnsZoneName')]",
      "location": "global"
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2024-01-01",
      "name": "[variables('vnetName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetCidr')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('subnetVmName')]",
            "properties": {
              "addressPrefix": "[parameters('subnetVmCidr')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
              }
            }
          },
          {
            "name": "[variables('subnetDbName')]",
            "properties": {
              "addressPrefix": "[parameters('subnetDbCidr')]",
              "delegations": [
                {
                  "name": "Microsoft.DBforPostgreSQL/flexibleServers",
                  "properties": {
                    "serviceName": "Microsoft.DBforPostgreSQL/flexibleServers"
                  }
                }
              ]
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
      "apiVersion": "2024-06-01",
      "name": "[variables('dnsLinkName')]",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
        "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]"
      ],
      "properties": {
        "registrationEnabled": false,
        "virtualNetwork": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
        }
      }
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers",
      "apiVersion": "2024-08-01",
      "name": "[parameters('postgresInstanceName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('dbSkuName')]",
        "tier": "[parameters('dbSkuTier')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/privateDnsZones/virtualNetworkLinks', variables('privateDnsZoneName'), concat(variables('vnetName'), '-link'))]"
      ],
      "properties": {
        "version": "16",
        "administratorLogin": "[parameters('postgresAdmin')]",
        "administratorLoginPassword": "[parameters('postgresPassword')]",
        "storage": {
          "storageSizeGB": 32
        },
        "network": {
          "delegatedSubnetResourceId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetDbName'))]",
          "privateDnsZoneArmResourceId": "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]"
        }
      }
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers/databases",
      "apiVersion": "2024-08-01",
      "name": "[concat(parameters('postgresInstanceName'), '/', parameters('databaseName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresInstanceName'))]"
      ],
      "properties": {
        "charset": "UTF8",
        "collation": "en_US.utf8"
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2024-01-01",
      "name": "[variables('publicIpName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "publicIPAllocationMethod": "Static"
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2024-01-01",
      "name": "[variables('nicName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIpName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetVmName'))]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIpName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2024-07-01",
      "name": "[variables('vmName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresInstanceName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[variables('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "linuxConfiguration": {
            "disablePasswordAuthentication": false,
            "ssh": {
              "publicKeys": [
                {
                  "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                  "keyData": "[parameters('sshPublicKey')]"
                }
              ]
            }
          },
          "customData": "[base64(concat('#!/bin/bash\n','set -e\n','apt-get update && apt-get install -y docker.io\n','systemctl start docker && systemctl enable docker\n','usermod -aG docker ', parameters('adminUsername'), '\n','mkdir -p /home/', parameters('adminUsername'), '/config\n','cat <<EOF > /home/', parameters('adminUsername'), '/config/application.yml\n','datasources:\n','  postgres:\n','    url: jdbc:postgresql://', reference(resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresInstanceName')), '2024-08-01').fullyQualifiedDomainName, ':5432/', parameters('databaseName'), '\n','    username: ', parameters('postgresAdmin'), '\n','    password: ', parameters('postgresPassword'), '\n','kestra:\n','  server:\n','    basic-auth:\n','      enabled: true\n','      username: ', parameters('kestraBasicUser'), '\n','      password: ', parameters('kestraBasicPassword'), '\n','  repository:\n','    type: postgres\n','  queue:\n','    type: postgres\n','  storage:\n','    type: azure\n','    azure:\n','      endpoint: ', reference(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2023-05-01').primaryEndpoints.blob, '\n','      container: ', parameters('containerName'), '\n','      connection-string: \"DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2023-05-01').keys[0].value, ';EndpointSuffix=', environment().suffixes.storage, '\"\n','  tasks:\n','    tmp-dir:\n','      path: /tmp/kestra-wd/tmp\n','EOF\n','docker run -d --restart=always -p 8080:8080 --user=root -v /var/run/docker.sock:/var/run/docker.sock -v /home/', parameters('adminUsername'), '/config/application.yml:/etc/config/application.yml kestra/kestra:latest server standalone --config /etc/config/application.yml\n'))]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "Canonical",
            "offer": "0001-com-ubuntu-server-jammy",
            "sku": "22_04-lts-gen2",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "kestraWebAddress": {
      "type": "string",
      "value": "[format('http://{0}:8080', reference(resourceId('Microsoft.Network/publicIPAddresses', variables('publicIpName'))).ipAddress)]"
    },
    "postgresFQDN": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresInstanceName')), '2024-08-01').fullyQualifiedDomainName]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[parameters('storageAccountName')]"
    }
  }
}